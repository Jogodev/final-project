{% extends 'base.html.twig' %}

{% block title %}Carma auto{% endblock %}

{% block body %}
<section>
    <div class="jumbotron p-5 mb-4 rounded-3 search">
        <div class="container py-5">
            <div class="search">
                <h1 class="display-5 fw-bold">Trouver votre location</h1>
                <div class="container">
                    {{ form_start(formSearch) }}
                    <div class="row align-items-end">
                        <div class="col">
                            {{ form_row(formSearch.categories) }}
                        </div>
                        <div class="col">
                            {{ form_row(formSearch.maxPrice) }}
                        </div>
                        <div class="col">
                            {{ form_row(formSearch.energy) }}
                        </div>
                        <div class="col">
                            <button class="btn btn-dark">Rechercher</button>
                        </div>
                    </div>
                    {{ form_end(formSearch) }}
                </div>
            </div>
        </div>
    </div>
    {# Seul l'utilisateur connecté peut réserver #}
    <div class="row row-cols-1 row-cols-md-3">
        {% for car in cars %}
        <div class="col mb-4">
            <div class="card">
                <img src="{{car.image}}" class="card-img-top" alt="image de la {{car.title}}">
                <div class="card-body">
                    <h3 class="card-title">{{car.title}}</h3>
                    <h4 class="card-text">{{car.categories}}</h4>
                    <h5 class="card-text">{{car.energy | capitalize}}</h5>
                    <p class="card-descrition">{{car.content|slice(1, 5)}}</p>
                    <p class="card-text">{{car.price}}€ par jour</p>
                    <a href="/cars/{{car.id}}" class="btn btn-dark">Plus sur la {{car.title}}</a>
                    {% if is_granted('ROLE_USER') and app.user.isVerified == 1 %}
                    <a href="/bookings/{{car.id}}" class="btn btn-light">Réserver ce vehicule</a>
                    {# Si l'utilisateur n'a pas confirmaé son email il ne pourra pas réservé en ligne #}
                    {% elseif is_granted('ROLE_USER') and app.user.isVerified == 0 %}
                    <p>Votre email n'est pas vérifié <a href="{{ path ('users_confirm_email') }}">renvoyer le mail
                            de
                            confirmation</a></p>
                    {% else %}
                    <p> Vous devez être inscrit pour reserver en ligne
                        <span>
                            <a href="{{ path('app_login') }}">connexion</a>
                        </span>
                        <span>
                            <a href="{{ path('app_register') }}">inscription</a>
                        </span>
                    </p>
                    {% endif %}
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
    <div class="pagination">
        {{ knp_pagination_render( cars ) }}
    </div>
</section>
<section id="contact">
    <h1>Contactez-Nous</h1>
    <div class="container">
        {{form_start(contactForm)}}
        <div class="form-row">
            <div class="form-group col-md-5">
                {{form_label(contactForm.nom)}}
                {{form_widget(contactForm.nom)}}
                {{form_errors(contactForm.nom)}}
            </div>
            <div class="form-group col-md-5">
                {{form_label(contactForm.email)}}
                {{form_widget(contactForm.email)}}
                {{form_errors(contactForm.email)}}
            </div>
            <div class="form-group col-md-2">
                {{form_label(contactForm.sujet)}}
                {{form_widget(contactForm.sujet)}}
                {{form_errors(contactForm.sujet)}}
            </div>
        </div>
        <div class="form-group">
            {{form_label(contactForm.message)}}
            {{form_widget(contactForm.message)}}
            {{form_errors(contactForm.message)}}
        </div>
        <button class="btn btn-dark">Envoyer</button>
        {{form_end(contactForm)}}
        <br>
        {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
        {% endfor %}
    </div>
</section>

{% block javascript %}
<script>
    let categEl = document.getElementById('booking_search_categories');
    let priceEl = document.getElementById('booking_search_maxPrice');
    let energyEl = document.getElementById('booking_search_energy');

    function searchQuery() {
        document.querySelector('form[name=booking_search]').submit();

    }

    categEl.addEventListener('change', searchQuery)
    priceEl.addEventListener('change', searchQuery)
    energyEl.addEventListener('change', searchQuery)



</script>
{% endblock %}


{% endblock %}