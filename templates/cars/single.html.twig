{% extends 'base.html.twig' %}



{% block title %}{% for car in cars %} page de la {{ car.title }} {% endfor %}{% endblock %}

{% block body %}
{% for car in cars %}
<div class="jumbotron text-center">
    <h1>{{ car.title }}</h1>
</div>
<div class="single">
    <div class="single-item1">
        <p>Categorie : {{ car.categories| upper }}</p>

        <p>Carburant : {{ car.energy| upper }}</p>

        <p>Equipement : {{ car.content }}</p>

        <p>Prix par jour : {{ car.price }}€</p>
        {% if is_granted('ROLE_USER') and app.user.isVerified == 1 %}
        <a href="/bookings/{{car.id}}" class="btn btn-primary">Réserver ce vehicule</a>
        {% elseif is_granted('ROLE_USER') and app.user.isVerified == 0 %}
        <p>Votre email n'est pas vérifié <a href="{{ path ('users_confirm_email') }}">renvoyer le mail de confirmation</a></p>
        {% else %}
        <br>
        Vous devez être inscrit pour reserver en ligne
        <span>
            <a href="{{ path('app_login') }}">connexion</a>
        </span>
        <span>
            <a href="{{ path('app_register') }}">inscription</a>
        </span>
        {% endif %}
    </div>
    <div class="single-item2">
        <img src="{{ car.image }}" alt="image de la {{ car.title }}" class="img-fluid">
    </div>
</div>



{% endfor %}

{% endblock %}