{% extends 'users.html.twig' %}

{% block title %}{{ app.user.firstname }} {{ app.user.lastname }} {% endblock %}

{% block body %}
<div class="container">
    <div class="row"> <h1>Modification de votre mot de passe</h1></div>
    <div class="row">
        <form method="post">
            <div class="form-group">
                <label for="password1">Nouveau mot de pass</label>
                <input type="password" class="form-control" id="password1">
            </div>
            <div class="form-group">
                <label for="password2">Confirmer le mot de pass</label>
                <input type="password" class="form-control" id="password2">
            </div>
            <button class="btn btn-primary">Valider</button>
        </form>
    </div>
</div>
{% endblock %}