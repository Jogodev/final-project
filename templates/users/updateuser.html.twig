{% extends 'users.html.twig' %}

{% block title %}{{ app.user.firstname }} {{ app.user.lastname }} {% endblock %}

{% block body %}
<div class="updateform">
    {{ form_start(formUser)}}
    <Fieldset>
        <legend>Modification de profil</legend>
        <div class="form-group">
            <div class="form-group">
                {{ form_row(formUser.lastname)}}
            </div>
            <div class="form-group">
                {{ form_row(formUser.firstname)}}
            </div>
            <div class="form-group">
                {{ form_row(formUser.tel)}}
            </div>
        </div>
        <div class="form-group">
            <button class="btn btn-dark">Valider</button>
        </div>
    </Fieldset>
    {{ form_end(formUser)}}
</div>
{% endblock %}